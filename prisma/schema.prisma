// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  image     String
  email     String
  role      Role       @default(user)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  comments  Comment[]
  Reaction  Reaction[]

  @@map("users")
}

model PlayList {
  id       String     @id @default(uuid())
  image    String
  video    String
  title    String
  comments Comment[]
  Reaction Reaction[]

  @@map("playlists")
}

model Comment {
  id         String   @id @default(uuid())
  comment    String
  username   String
  image      String
  playlist   PlayList @relation(fields: [playlistId], references: [id])
  playlistId String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("comments")
}

model Reaction {
  id         String   @id @default(uuid())
  likes      String   @default("0")
  dislikes   String   @default("0")
  playlist   PlayList @relation(fields: [playlistId], references: [id])
  playlistId String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
   @@map("reactions")
}

enum Role {
  user
  admin
}
